# =============================================================================
# File: .editorconfig
# Purpose:
#   Enforce consistent whitespace, line endings, and charset across editors.
#
# Notes:
#   - Keep in sync with formatter configs.
# =============================================================================

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.{yml,yaml,json,toml,ini}]
indent_size = 2

[Makefile]
indent_style = tab
