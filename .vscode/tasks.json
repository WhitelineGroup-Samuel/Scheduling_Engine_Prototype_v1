// =============================================================================
// File: .vscode/tasks.json
// Purpose:
//   Developer tasks to run lint, type-check, tests, migrations, seeding.
//
// Tasks (examples):
//   - "init-db": alembic upgrade head
//   - "seed": python manage.py seed-data
//   - "lint": ruff check . && black --check .
// =============================================================================
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint",
      "type": "shell",
      "command": "ruff check . && black --check ."
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "mypy ."
    },
    {
      "label": "test",
      "type": "shell",
      "command": "pytest -q"
    },
    {
      "label": "init-db",
      "type": "shell",
      "command": "alembic upgrade head",
      "problemMatcher": []
    },
    {
      "label": "seed",
      "type": "shell",
      "command": "python manage.py seed-data"
    },
    {
      "label": "run",
      "type": "shell",
      "command": "python run.py"
    },
    {
      "label": "diag",
      "type": "shell",
      "command": "python manage.py diag"
    },
    {
      "label": "test (env.test)",
      "type": "shell",
      "command": "pytest -q",
      "problemMatcher": []
    }
  ]
}
